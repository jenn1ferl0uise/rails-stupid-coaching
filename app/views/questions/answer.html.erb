<div class="container">
  <h1>Stupid Coaching</h1>

  <div class="card">
    <p><%= @question %></p>
    <p><em>- You</em></p>
  </div>
  <div class="card" id="coach">
    <p><strong><%= @answer %></strong></p>
    <p><em>- Your coach</em></p>
  </div>


  <button type="button" class="btn btn-info">
    <%= link_to "Ask another Question!", '/ask' %>
  </button>
</div>
